# Mudlet Discord Bug Bot Configuration
# Copy this file to .env and fill in your values
#
# IMPORTANT: Do not use inline comments!
# Wrong:  DISCORD_BOT_TOKEN=abc123  # my token
# Right:  DISCORD_BOT_TOKEN=abc123

# =============================================================================
# REQUIRED - Discord
# =============================================================================

# Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# =============================================================================
# REQUIRED - LLM Provider (at least one)
# =============================================================================

# Primary LLM provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API key from https://console.anthropic.com/
# Used as fallback if OpenAI is primary, or primary if set
ANTHROPIC_API_KEY=

# =============================================================================
# REQUIRED - GitHub (token OR app credentials)
# =============================================================================

# Option 1: Personal Access Token (simpler)
# Create at https://github.com/settings/tokens with "repo" scope
GITHUB_TOKEN=

# Option 2: GitHub App (more secure, recommended for production)
# GITHUB_APP_ID=
# GITHUB_PRIVATE_KEY_PATH=./certs/github-app.pem
# GITHUB_INSTALLATION_ID=

# Target repository for issue creation
GITHUB_REPO=Mudlet/Mudlet

# =============================================================================
# OPTIONAL - Permissions
# =============================================================================

# Comma-separated Discord role names that can use /bug command
# Leave empty to allow all users
BUG_COMMAND_ROLES=

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================

# Enable duplicate issue detection (searches GitHub before filing)
ENABLE_DUPLICATE_DETECTION=true

# Enable image analysis in bug reports (future feature)
ENABLE_IMAGE_ANALYSIS=true

# =============================================================================
# OPTIONAL - Development
# =============================================================================

# Discord guild ID for faster slash command sync during development
# Commands sync instantly to this guild instead of waiting for global propagation
DISCORD_TEST_GUILD_ID=

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL - Health Check
# =============================================================================

# Port for the health check HTTP server
HEALTH_PORT=8080
